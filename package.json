{
  "name": "lts-site",
  "version": "1.0.0",
  "description": "Professional PHP developer portfolio site",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "node scripts/auto-register-articles.js && node embed-code-snippets.js && node scripts/process-ejs.js && vite",
    "build": "node scripts/auto-register-articles.js && node embed-code-snippets.js && node scripts/process-ejs.js && vite build",
    "preview": "vite preview",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint . --ext .js,.html --fix",
    "lint:check": "eslint . --ext .js,.html",
    "clean": "rm -rf dist",
    "deploy": "npm run build && rsync -avz --delete dist/ public_html/",
    "embed-code": "node embed-code-snippets.js",
    "syntax-highlight": "node embed-code-snippets.js",
    "articles:register": "node scripts/auto-register-articles.js"
  },
  "devDependencies": {
    "cheerio": "^1.0.0-rc.12",
    "ejs": "^3.1.10",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "glob": "^10.0.0",
    "playwright": "^1.54.1",
    "prettier": "^3.0.0",
    "prismjs": "^1.29.0",
    "rollup-plugin-copy": "^3.5.0",
    "vite": "^5.0.0",
    "vite-plugin-html": "^3.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "quoteProps": "as-needed",
    "trailingComma": "es5",
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "endOfLine": "lf",
    "htmlWhitespaceSensitivity": "css"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "env": {
      "browser": true,
      "es2022": true,
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "rules": {
      "no-unused-vars": "warn",
      "no-console": "warn",
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "dependencies": {
    "jsdom": "^26.1.0"
  }
}
