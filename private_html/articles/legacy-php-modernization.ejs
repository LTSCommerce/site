{
return match ($this-&gt;featureToggle-&gt;isEnabled(&#39;modern_user_service&#39;, $id)) {
true =&gt; $this-&gt;modernService-&gt;getUser($id),
false =&gt; $this-&gt;legacyService-&gt;getUser($id),
};
}
