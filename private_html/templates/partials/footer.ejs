<footer class="site-footer">
    <div class="container">
        <div class="footer-content">
            <div class="footer-section">
                <h3><%= site.author || 'Joseph' %></h3>
                <p><%= site.tagline %></p>
            </div>
            <div class="footer-section">
                <h4>Navigation</h4>
                <ul class="footer-nav">
                    <% navigation.main?.forEach(item => { %>
                    <li><a href="<%= item.path %>"><%= item.label %></a></li>
                    <% }); %>
                </ul>
            </div>
            <div class="footer-section">
                <h4>Connect</h4>
                <div class="social-links">
                    <% if (site.social?.github) { %>
                    <a href="https://github.com/<%= site.social.github %>" target="_blank">GitHub</a>
                    <% } %>
                    <% if (site.social?.linkedin) { %>
                    <a href="https://linkedin.com/in/<%= site.social.linkedin %>" target="_blank">LinkedIn</a>
                    <% } %>
                    <% if (site.contact?.email) { %>
                    <a href="mailto:<%= site.contact.email %>">Email</a>
                    <% } %>
                </div>
            </div>
        </div>
        <div class="footer-bottom">
            <p>&copy; <%= currentYear %> <%= site.author || 'Joseph' %>. All rights reserved.</p>
        </div>
    </div>
</footer>