<header class="site-header">
    <nav class="nav-container">
        <div class="nav-brand">
            <a href="/" class="brand-link"><%= site.tradingName %></a>
        </div>
        <ul class="nav-menu">
            <% navigation.main?.forEach(item => { %>
            <li>
                <a href="<%= item.path %>" 
                   class="nav-link<%= isActive(currentPage, item.key) ? ' active' : '' %>">
                    <%= item.label %>
                </a>
            </li>
            <% }); %>
        </ul>
        <button class="nav-toggle" aria-label="Toggle navigation">
            <span class="hamburger"></span>
        </button>
    </nav>
</header>